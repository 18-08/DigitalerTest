    <div>
        <p>Deutschland - Berlin</p>
        <p>Monaco - ?</p>
    </div>
    <div class="radiobutton">
        <label><input type="radio" id="Madrid" name="Monaco" value="Madrid" /> Madrid</label>
        <label><input type="radio" id="Monaco" name="Monaco" value="Monaco" /> Monaco</label>
        <label><input type="radio" id="Port Vila" name="Monaco" value="Port Vila" /> Port Vila</label>
        <label><input type="radio" id="Manama" name="Monaco" value="Manama" /> Manama</label>
    </div>
