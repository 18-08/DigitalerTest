    <div>
        <p>Fisch - Wasser</p>
        <p>? - Luft</p>
    </div>
    <div class="radiobutton">
        <label><input type="radio" id="Flugzeug" name="Luft" value="Flugzeug" /> Flugzeug</label>
        <label><input type="radio" id="Vogel" name="Luft" value="Vogel" /> Vogel</label>
        <label><input type="radio" id="Baum" name="Luft" value="Baum" /> Baum</label>
        <label><input type="radio" id="Flamingo" name="Luft" value="Flamingo" /> Flamingo</label>
